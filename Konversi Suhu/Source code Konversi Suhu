    private void btnhapusActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        txtcelcius.setText("");
        txtreamur.setText("");
        txtfareinheit.setText("");
        txtkelvin.setText("");
        txtcelcius.requestFocus();
    }

    private void btnkonversiActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        double c, f, k, r;

        c = Double.parseDouble(txtcelcius.getText());

        r = c / 5 * 4;
        f = c / 5 * 9 + 32;
        k = c + 273;

        txtreamur.setText(String.valueOf(r));
        txtfareinheit.setText(String.valueOf(f));
        txtkelvin.setText(String.valueOf(k));

    }

    private void btnkeluarActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        System.exit(0);
    }

